<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/gen_noti2"
        android:layout_width="378dp"
        android:layout_height="58dp"
        android:layout_marginBottom="220dp"
        android:background="#FF0000"
        android:text="Stop Notification"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gen_noti"
        app:layout_constraintVertical_bias="0.322" />

    <Button
        android:id="@+id/gen_noti"
        android:layout_width="378dp"
        android:layout_height="58dp"
        android:layout_marginBottom="340dp"
        android:background="#4CAF50"
        android:text="Start Notification"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edi_time"
        android:layout_width="363dp"
        android:layout_height="75dp"
        android:ems="10"
        android:gravity="center"
        android:hint="100"
        android:inputType="number"
        android:textColor="#000000"
        android:textColorHint="#6C6767"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/gen_noti"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.76" />

</androidx.constraintlayout.widget.ConstraintLayout>